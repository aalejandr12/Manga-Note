{
  "name": "manga-library-app",
  "version": "1.0.0",
  "description": "Aplicación web para gestionar biblioteca de mangas/yaoi con organización automática usando Gemini API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:bg": "bash scripts/start-bg.sh",
    "stop:bg": "bash scripts/stop-bg.sh",
    "status:bg": "bash scripts/status-bg.sh",
    "logs": "tail -n 100 -f logs/server.log"
  },
  "keywords": [
    "manga",
    "yaoi",
    "pdf",
    "library",
    "gemini",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.1.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.296",
    "sharp": "^0.34.4",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
